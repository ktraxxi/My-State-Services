    <div></div>

    <div class="on_border">
        <div class="border">

            <div class="title_reg">
                <div><h1>Регистрация</h1></div>
                <div><span>Пожалуйста, заполните все поля</span></div>
            </div>

            <div class="field_list">
                <input @bind-value="PhoneNumber" class="field" type="text" maxlength="20" placeholder="Номер телефона / Логин" required>
                <input @bind-value="Password" class="field" type="text" maxlength="20" placeholder="Пароль" required>
                <input @bind-value="Surname" class="field" type="text" maxlength="20" placeholder="Фамилия" required>
                <input @bind-value="Name" class="field" type="text" maxlength="20" placeholder="Имя" required>
                <input @bind-value="Patronymic" class="field" type="text" maxlength="20" placeholder="Отчество" required>
