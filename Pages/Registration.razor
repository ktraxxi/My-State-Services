                <li><input class="field" type="text" maxlength="20" placeholder="Серия и номер паспорта" required></li>
                <li><input class="field" type="text" maxlength="20" placeholder="Город проживания" required></li>
                <li><input class="field" type="text" maxlength="20" placeholder="Улица" required></li>
