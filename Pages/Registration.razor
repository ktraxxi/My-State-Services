                <li><input class="field" type="text" maxlength="20" placeholder="Номер медицинского полиса" required></li>
                <li><input class="field email" type="text" maxlength="20" placeholder="ИНН" required></li>
            </div>

            <div class="reg_button">
                <div><a href="#">Регистрация</a></div>
            </div>

        </div>
