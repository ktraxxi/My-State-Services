                <input @bind-value="PhoneNumber" class="field" type="text" maxlength="20" placeholder="Номер дома" required>
                <input @bind-value="PhoneNumber" class="field" type="text" maxlength="20" placeholder="Номер квартиры">
                <input @bind-value="PhoneNumber" class="field" type="text" maxlength="20" placeholder="Номер медицинского полиса" required>
